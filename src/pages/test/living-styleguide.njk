                {% element_headings %} 
                <hr>

                <h6 class="info">Paragraphs:</h6>
                {% element_paragraphs %}
                <hr>

                <h6 class="info">Blockquote:</h6>
                {% element_blockquote %}
                <hr>

                <h6 class="info">In Paragraph styles:</h6>
                {% element_in_paragraph_style %}
                <hr>

                <h6 class="info">Links:</h6>
                {% element_links %}
                <hr>

                <h6 class="info">Unstyled List:</h6>
                {% element_unstyled_list %}
                <hr>

                <h6 class="info">Unordered List:</h6>
                {% element_unordered_list %}
                <hr>

                <h6 class="info">Ordered List:</h6>
                {% element_ordered_list %}
                <hr>

                <h6 class="info">Inline List:</h6>
                {% element_inline_list %}
                <hr>

