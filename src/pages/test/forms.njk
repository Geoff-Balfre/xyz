            {%- form_input_checkbox { type: 'checkbox', id: 'remembermeId', label: 'Remember me', data: formData.rememberme } %}
            {%- form_input_radio    { type: 'radio', id: 'yesnoId', label: 'Yes/No', data: formData.yesno } %}
            {%- form_input_radio    { type: 'radio', id: 'genderrId', label: 'Gender', data: formData.gender } %}
